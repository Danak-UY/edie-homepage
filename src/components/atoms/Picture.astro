---
interface Props {
    url: string;
    alt?: string;
    class?: string;
}

const { url, alt, class: className } = Astro.props;
---

<img src={url} alt={alt} class={className} />

<style lang="scss">
    img {
        width: 100%;
        max-width: 100%;
        height: auto;
        border-radius: 1.125rem;
    }
</style>